<%# This is a partial for a video that plays on hover. it's provided a src %>
<video 
  class="video-on-hover"
  src="<%= src %>"
  controls
  playsinline
  onmouseover="this.play()"
  <%# onmouseout="this.pause()" %>
>
  Your browser does not support the video tag.
</video>

<style>
  .video-on-hover {
    border-radius: 4px;
    border: 1px solid #ccc;
    max-width: 200px;
    max-height: 200px;
  }
</style>